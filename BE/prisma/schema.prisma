generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  name String
  email String
  birthDate DateTime
  status Int @default(0)
  avatar String
  address String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id Int @default(autoincrement()) @id
  storeId Int
  name String
  price Float
  sale Boolean @default(false)
  avatar String
  createdBy Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Store {
  id Int @default(autoincrement()) @id
  name String
  address String
  createdBy Int
  avatar String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id Int @default(autoincrement()) @id
  width Int
  height Int
  url String
  cloudName String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}