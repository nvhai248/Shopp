<h1 class='py-4 text-2xl'>Create Promotion</h1>

<form class='grid grid-cols-4 gap-4' id='promotion-form'>
  <!-- Avatar Upload -->
  <div class='col-span-2'>
    <div class='relative'>
      <label for='promotion-banner' class='block text-gray-700'>Banner</label>
      <input
        type='file'
        id='promotion-banner'
        name='banner'
        accept='image/*'
        class='absolute inset-0 w-full h-full opacity-0 cursor-pointer'
        onchange='previewImage(event)'
      />
      <div
        class='w-full bg-white border border-gray-300 rounded-md flex items-center justify-center py-2 px-4'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          class='h-6 w-6 text-gray-500 mr-2'
          fill='none'
          viewBox='0 0 24 24'
          stroke='currentColor'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='M12 6v6m0 0v6m0-6h6m-6 0H6'
          />
        </svg>
        <span class='text-gray-500'>Select File</span>
      </div>
    </div>

    <div id='preview-container' class='hidden'>
      <img id='image-preview' class='w-[600px] rounded-md mt-2' />
    </div>
  </div>

  <div class='col-span-2 flex flex-col'>
    <div class='mb-4'>
      <label for='promotion-name' class='block text-gray-700'>Name</label>
      <input
        type='text'
        id='promotion-name'
        name='name'
        class='w-full px-3 py-2 mt-1 border rounded-md'
      />
    </div>

    <div class='mb-4 h-[400px]'>
      <label
        for='promotion-description'
        class='block text-gray-700'
      >Description</label>
      <textarea
        id='promotion-description'
        name='description'
        class='w-full h-[400px] px-3 py-2 mt-1 border rounded-md'
      ></textarea>
    </div>
  </div>

  <div class='mb-4'>
    <label for='promotion-level' class='block text-gray-700'>Level</label>
    <select
      id='promotion-level'
      name='level'
      class='w-full px-3 py-2 mt-1 border rounded-md'
      onchange='checkPromotionLevel()'
    >
      <option value='ORDER'>ORDER</option>
      <option value='ITEM'>ITEM</option>
    </select>
  </div>

  <div class='mb-4'>
    <label for='promotion-type' class='block text-gray-700'>Type</label>
    <select
      id='promotion-type'
      name='type'
      class='w-full px-3 py-2 mt-1 border rounded-md'
    >
      <option value='PERCENT'>PERCENTAGE</option>
      <option value='VALUE'>VALUE</option>
    </select>
  </div>

  <div class='mb-4'>
    <label
      for='promotion-discountPercentage'
      class='block text-gray-700'
    >Discount Percentage</label>
    <input
      type='number'
      id='promotion-discountPercentage'
      name='discountPercentage'
      class='w-full px-3 py-2 mt-1 border rounded-md'
    />
  </div>

  <div class='mb-4'>
    <label for='promotion-discountValue' class='block text-gray-700'>Discount
      Value</label>
    <input
      type='number'
      id='promotion-discountValue'
      name='discountValue'
      class='w-full px-3 py-2 mt-1 border rounded-md'
    />
  </div>

  <div class='mb-4'>
    <label for='promotion-minValue' class='block text-gray-700'>Min Value</label>
    <input
      type='number'
      id='promotion-minValue'
      name='minValue'
      class='w-full px-3 py-2 mt-1 border rounded-md'
    />
  </div>

  <div class='mb-4'>
    <label for='promotion-startDate' class='block text-gray-700'>Start Date</label>
    <input
      type='date'
      id='promotion-startDate'
      name='startDate'
      class='w-full px-3 py-2 mt-1 border rounded-md'
    />
  </div>

  <div class='mb-4'>
    <label for='promotion-endDate' class='block text-gray-700'>End Date</label>
    <input
      type='date'
      id='promotion-endDate'
      name='endDate'
      class='w-full px-3 py-2 mt-1 border rounded-md'
    />
  </div>

  <div class='col-span-4 flex justify-end'>
    <button
      type='submit'
      class='bg-blue-500 hover:bg-blue-600 w-full text-white px-4 py-2 rounded-md'
    >
      Submit
    </button>
  </div>
</form>

<script src='js/promotion/create.js'></script>
<script src='js/upload.js'></script>