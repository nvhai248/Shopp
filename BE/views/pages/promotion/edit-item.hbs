<div class='flex justify-between'>
  <h1 class='py-5 text-2xl'>Update Promotion Item for :
    <span id='promotionId'>{{id}}</span></h1>
  <div class='col-span-4 flex justify-end'>
    <button
      type='button'
      onclick='showModalAddPromotionItem()'
      id='add-new-item-button'
      class='bg-black hover:bg-gray-800 w-full text-white px-4 py-2 rounded-md'
    >
      Add new Item (for ORDER TYPE)
    </button>
  </div>
</div>

<table class='col-span-4 w-full mt-5'>
  <thead>
    <tr>
      <th
        class='px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50'
      >
        Name
      </th>
      <th
        class='px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50'
      >
        Quantity
      </th>
      <th
        class='px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50'
      >
        Action
      </th>
    </tr>
  </thead>

  <tbody id='container-item' class='bg-white'>

    {{#each products}}
      <tr>
        <td class='px-6 py-4 border-b border-gray-200 whitespace-nowrap'>
          <div class='flex items-center'>
            <div class='flex-shrink-0 w-[7rem] h-auto'>
              <img src='{{avatar}}' alt='{{name}}' />
            </div>
            <div class='ml-4'>
              <div class='text-sm font-medium leading-5 text-gray-900'>
                {{name}}
              </div>
              <div class='text-sm leading-5 text-gray-500'>
                {{id}}
              </div>
            </div>
          </div>
        </td>
        <td class='px-6 py-4 border-b border-gray-200 whitespace-nowrap'>
          <div class='text-sm leading-5 text-gray-900'>
            {{quantity}}
          </div>
        </td>

        <td class='px-6 py-4 border-b border-gray-200 whitespace-nowrap'>
          <div class='flex flex-col'>
            <a
              onclick="updateQuantity('{{id}}', '{{name}}', '{{avatar}}')"
              class='text-indigo-600 hover:text-indigo-900 cursor-pointer'
            >Edit Quantity</a>
            <a
              onclick="deletePromotionItem('{{id}}', '{{name}}', '{{avatar}}')"
              class='text-red-600 mt-2 hover:text-red-900 hover:cursor-pointer'
            >Remove Promotion Item</a>
          </div>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<script src='js/promotion/update-item.js'></script>
<script src='js/promotion/update-quantity.js'></script>
<script src='js/promotion/delete-item.js'></script>