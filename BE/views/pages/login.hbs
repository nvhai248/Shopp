<div
  class='flex absolute inset-0 bg-gray-200 items-center justify-center z-50 px-6'
>
  <div class='w-full max-w-sm p-6 bg-white rounded-md shadow-md'>
    <div class='flex items-center justify-center'>
      <span class='text-2xl font-semibold text-gray-700'>SIGN IN</span>
    </div>

    <form class='mt-4' id='loginForm'>
      <label class='block'>
        <span class='text-sm text-gray-700'>Email</span>
        <input
          type='email'
          id='email'
          class='block w-full mt-1 border-2 p-1 border-gray-300 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500 h-9'
        />
      </label>

      <label class='block mt-3'>
        <span class='text-sm text-gray-700'>Password</span>
        <input
          type='password'
          id='password'
          class='block w-full mt-1 border-2 p-1 border-gray-300 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500 h-9'
        />
      </label>

      <p class='mt-1 text-red-600' id='loginNotification'>

      </p>

      <div class='mt-6'>
        <button
          type='submit'
          class='w-full px-4 py-2 text-sm text-white bg-indigo-600 rounded-md focus:outline-none hover:bg-indigo-500'
        >
          Sign in
        </button>
      </div>
    </form>
  </div>
</div>

