<div class='flex flex-row'>
  <div class='w-[20%]'>
    <h3 class='text-2xl font-medium text-gray-700'>Category</h3>

    <div
      class='flex flex-col mt-8 h-full bg-slate-50 rounded-md w-full shadow-lg'
    >
      <div class='flex flex-col h-full w-full'>
        {{#each categories}}
          <div
            class='border-b border-gray-300 cursor-pointer p-4 bg-white hover:bg-gray-200'
            onclick="toggleSubmenu('{{parent.id}}')"
          >
            <div class='flex justify-between items-center'>
              <span>{{parent.name}}</span>
              <svg
                id='icon-{{parent.id}}'
                class='w-4 h-4 transform transition-transform duration-300'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
                xmlns='http://www.w3.org/2000/svg'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M19 9l-7 7-7-7'
                ></path>
              </svg>
            </div>
            <div
              id='{{parent.id}}'
              class='max-h-0 overflow-hidden transition-all duration-300 ease-in-out bg-white'
            >
              {{#if childs.length}}
                {{#each childs}}
                  <button
                    class='py-2 pl-2 w-full text-left bg-gray-100 hover:bg-white'
                  >{{this.name}}</button>
                {{/each}}
              {{/if}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>

  </div>
  <div class='ml-8 w-[80%]'>
    <h3 class='text-2xl font-medium text-gray-700'>Product</h3>

    <div class='flex flex-col mt-8 h-full w-full'>
      <div class='py-2 -my-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8'>
        <div
          class='inline-block min-w-full overflow-hidden align-middle border-b border-gray-200 shadow sm:rounded-lg'
        >
          <table class='min-w-full'>
            <thead>
              <tr>
                <th
                  class='px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50'
                >
                  Name
                </th>
                <th
                  class='px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50'
                >
                  Description
                </th>
                <th
                  class='px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50'
                >
                  Price
                </th>
                <th
                  class='px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50'
                >
                  status
                </th>
                <th class='px-6 py-3 border-b border-gray-200 bg-gray-50'></th>
              </tr>
            </thead>

            <tbody class='bg-white'>
              {{#each products}}
                <tr>
                  <td
                    class='px-6 py-4 border-b border-gray-200 whitespace-nowrap'
                  >
                    <div class='flex items-center'>
                      <div class='flex-shrink-0 w-10 h-10'>
                        <img
                          class='w-10 h-10 rounded-full'
                          src='{{avatar}}'
                          alt=''
                        />
                      </div>

                      <div class='ml-4'>
                        <div
                          class='text-sm font-medium leading-5 text-gray-900'
                        >
                          {{name}}
                        </div>
                        <div class='text-sm leading-5 text-gray-500'>
                          {{id}}
                        </div>
                      </div>
                    </div>
                  </td>

                  <td
                    class='px-6 py-4 border-b border-gray-200 whitespace-nowrap'
                  >
                    <div class='text-sm leading-5 text-gray-900'>
                      {{description}}
                    </div>
                    <div class='text-sm leading-5 text-gray-500'>
                      {{publisherId}}
                    </div>
                  </td>

                  <td
                    class='px-6 py-4 text-sm leading-5 text-gray-500 border-b border-gray-200 whitespace-nowrap'
                  >
                    {{price}}
                  </td>

                  <td
                    class='px-6 py-4 border-b border-gray-200 whitespace-nowrap'
                  >
                    <span
                      class='inline-flex px-2 text-xs font-semibold leading-5 text-green-800 bg-green-100 rounded-full'
                    >{{status}}</span>
                  </td>

                  <td
                    class='px-6 py-4 text-sm font-medium leading-5 text-right border-b border-gray-200 whitespace-nowrap'
                  >
                    <a
                      href='#'
                      class='text-indigo-600 hover:text-indigo-900'
                    >Edit</a>
                  </td>
                </tr>{{/each}}

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script src='js/category/cate.js'></script>